<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:animateLayoutChanges="true"
    tools:context=".activity.PronunciationActivity">

    <TextView
        android:id="@+id/voiceRecorded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"

        android:gravity="center"

        android:text=""
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="sans"


        />

    <ImageView
        android:id="@+id/thingImage"
        android:layout_width="300dp"
        android:layout_height="300dp"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="@color/primary_light"
        android:scaleType="fitCenter"
        android:src="@drawable/apple" />



    <TextView
        android:id="@+id/thingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thingImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:padding="5dp"
        android:text="Apple"
        android:textColor="@color/black"
        android:textSize="54sp"
        android:textStyle="bold"
        android:typeface="sans"


        />



    <ImageButton
        android:id="@+id/btnAudio"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/thingName"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape"
        android:elevation="30dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_audio" />

    <ImageButton
        android:id="@+id/buttonRightThing"
        android:layout_width="60dp"
        android:layout_height="130dp"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/button_shape"
        android:clipToPadding="false"
        android:elevation="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_right_arrow" />


    <ImageButton
        android:id="@+id/buttonLeftThing"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_shape"
        android:elevation="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_left_arrow" />


    <ImageButton
        android:id="@+id/btnVoice"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btnAudio"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:elevation="30dp"

        android:scaleType="fitCenter"
        android:src="@drawable/icon_micro" />


</RelativeLayout>