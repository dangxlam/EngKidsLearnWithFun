<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameChooseImgLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="2">

        <TextView
            android:id="@+id/scoreSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Score: 0"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Question: 1"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

    </GridLayout>


    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="Chọn hình đúng"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvQuesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Apple"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageButton
        android:id="@+id/btnAudio"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape"
        android:elevation="30dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_audio" />

    <GridLayout
        android:id="@+id/gridChoiceImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"



        android:rowCount="2"
        android:columnCount="2"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <ImageView
                android:id="@+id/ivChoice1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/apple"
                android:scaleType="fitCenter"
                android:layout_margin="8dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <ImageView
                android:id="@+id/ivChoice2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/apple"
                android:layout_margin="8dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChoice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <ImageView
                android:id="@+id/ivChoice3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/apple"
                android:layout_margin="8dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChoice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <ImageView
                android:id="@+id/ivChoice4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/apple"
                android:layout_margin="8dp"/>

        </androidx.cardview.widget.CardView>







    </GridLayout>


</LinearLayout>